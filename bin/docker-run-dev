#!/usr/bin/env bash
set -e

touch .env.local
touch .env.development.local
# Need to pick up PORT
source .env.development
source .env.development.local

docker run \
  --env-file=.env \
  --env-file=.env.local \
  --env-file=.env.development \
  --env-file=.env.development.docker \
  --env-file=.env.development.local \
  -p ${PORT}:${PORT} \
  -it webhookdb-api "$@"
