{
  "name": "webhookdb-api",
  "description": "",
  "scripts": {
  },
  "env": {
    "BUNDLE_WITHOUT": {
      "required": true
    },
    "HEROKU_APP_ID": {
      "required": true
    },
    "HEROKU_APP_NAME": {
      "required": true
    },
    "HEROKU_RELEASE_CREATED_AT": {
      "required": true
    },
    "HEROKU_RELEASE_VERSION": {
      "required": true
    },
    "HEROKU_SLUG_COMMIT": {
      "required": true
    },
    "HEROKU_SLUG_DESCRIPTION": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql",
    "heroku-redis",
    "timber-logging"
  ],
  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-ruby"
    }
  ],
  "environments": {
    "test": {
      "env" : {
        "RACK_ENV": "development"
      },
      "scripts": {
        "test-setup": "bundle install",
        "test": "bundle exec rubocop && bundle exec rspec ./spec/"
      },
      "addons":[
        "heroku-postgresql"
      ]
    }
  }
}
